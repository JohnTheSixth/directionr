<div class="row">
  <div class="col-lg-4 col-lg-offset-4 col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1">

    <%= form_for @user, :url => password_reset_path(params[:id]) do |f| %>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-text-field form-control', placeholder: 'New Password' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: 'form-text-field form-control', placeholder: 'Confirm New Password' %>
      </div>

      <div class="actions"><%= f.submit 'Update Password', class: 'btn btn-default' %></div>

    <% end %>

  </div>
</div>