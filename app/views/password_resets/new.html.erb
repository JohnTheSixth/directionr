<%= @host %>
<%= @port %>

<div class="row">
	<div class="col-lg-4 col-lg-offset-4 col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1">

	<p class='center'><span class='title-big'>P</span><span class='title-small'>ASSWORD</span>&nbsp;<span class='title-big'>R</span><span class="title-small">ESET</span></p>

	<%= form_tag password_resets_path, :method => :post do %>
		<div class="form-group">
			<%= label_tag :email, "Email address" %>
			<%= text_field_tag :email, params[:email], class: 'form-text-field form-control', placeholder: 'Enter email' %>
		</div>
		
		<p><%= submit_tag "Reset Password", class: 'btn btn-default' %></p>
	<% end %>
