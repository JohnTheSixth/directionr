<%= params %>

<div class="row">
	<div class="col-lg-4 col-lg-offset-4 col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1">

		<div class="loginForm">
		<%= form_for @user do |f| %>

			<div class="form-group">
				<label for="first_name">First Name:</label>
				<%= f.text_field :first_name, class: 'form-text-field form-control', placeholder: 'First Name' %>
			</div>

			<div class="form-group">
				<label for="last_name">Last Name:</label>
				<%= f.text_field :last_name, class: 'form-text-field form-control', placeholder: 'Last Name' %>
			</div>

			<div class="form-group">
				<label for="username">Username:</label>
				<%= f.text_field :username, class: 'form-text-field form-control', placeholder: 'Username' %>
			</div>
				 
			<div class="form-group">
				<label for="email">Email:</label>
				<%= f.text_field :email, class: 'form-text-field form-control', placeholder: 'Email' %>
			</div>
			
			<div class="form-group">
				<label for="password">Password:</label>
				<%= f.password_field :password, class: 'form-text-field form-control', placeholder: 'Password' %>
			</div>
			
			<p><%= f.submit 'Update My Account', class: 'btn btn-default' %></p>

		<% end %>
		</div>
	</div>
</div>