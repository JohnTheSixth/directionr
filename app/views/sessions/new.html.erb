<div class="row">

	<div class="col-lg-4 col-lg-offset-4 col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1">

		<p class='center'><span class='title-big'>D</span><span class='title-small'>IRECTION</span><span class='title-big'>R.</span></p>
		<p class='center'>Help people do things.</p>
		<br>

			<%= form_tag '/login' do %>
			  <div class="form-group">
			    <label for="loginEmail">Email address</label>
			    <%= email_field_tag :loginEmail, nil, class: 'form-control', placeholder: 'Enter email' %>
			  </div>

			  <div class="form-group">
			    <label for="loginPassword">Password</label>&nbsp;(<%= link_to "Forgot Password?", new_password_reset_path %>)
			    <%= password_field_tag :loginPassword, nil, class: 'form-control', placeholder: 'Password' %>
			  </div>

			<div class="checkbox">
			  	<label>
			  		<%= check_box_tag :remember_me, 1 %> Remember Me
			  	</label>
			</div>

			  <%= submit_tag "Login", class: 'btn btn-default' %>
			<% end %>

		</div>

</div>
<br>
<div class="row">
	<div class="col-lg-4 col-lg-offset-4 col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1">
		<p>If you don't have an account, <%= link_to 'create one here', '/users/new' %>.</p>
	</div>
</div>